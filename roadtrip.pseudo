maxmiles = d;
function greedyDriving(x,start,end, maxmiles){
  hotels[];
  milestravelled = 0;
  for (i = start; milestravelled < maxmiles && i < end; i++){
    if (x[i] + milestravelled <= maxmiles){
      milestravelled += x[i];
    }
  }
  hotels.add(i);
  if (i != end){
    hotels.add(greedyDriving(x,i,end,maxmiles));
  }
  return hotels[];
}
